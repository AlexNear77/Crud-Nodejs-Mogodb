<div class="col-md-4 mx-auto">
   <div class="card text-center">
      <div class="card-header">
         <h3>Editar producto</h3>
      </div>
      <div class="card-body">
         <form action="/productos/edit/{{producto.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
               <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{producto.nombre}}" autofocus>
            </div>
            <div class="form-group">
               <textarea name="descripcion" placeholder="Descripcion" class="form-control" rows="4" >{{producto.descripcion}}</textarea>
            </div>
            <div class="form-group">
               <input type="text" name="marca" class="form-control" placeholder="Marca" value="{{producto.marca}}">
            </div>
            <div class="form-group">
               <input type="text" name="distribuidor" class="form-control" placeholder="Distribuidor" value="{{producto.distribuidor}}">
            </div>
            <div class="form-group">
               <div class="input-group mb-3">
                  <div class="input-group-prepend">
                     <span class="input-group-text">$</span>
                  </div>
                  <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="Precio compra" name="precioCompra" value="{{producto.precioCompra}}">
                  <div class="input-group-append">
                     <span class="input-group-text">.00</span>
                  </div>
               </div>
            </div>
            <div class="form-group">
               <div class="input-group mb-3">
                  <div class="input-group-prepend">
                     <span class="input-group-text">$</span>
                  </div>
                  <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="Precio venta" name="precioVenta" value="{{producto.precioVenta}}">
                  <div class="input-group-append">
                     <span class="input-group-text">.00</span>
                  </div>
               </div>
            </div>
            <div class="form-group">
               <button class="btn btn-primary btn-block">
                  Guardar
               </button>
            </div>
         </form>
      </div>
   </div>
</div>