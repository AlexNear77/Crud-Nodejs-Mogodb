<div class="row">
   {{#each productos}}
      <div class="col-md-3">
         <div class="card">
            <div class="card-body">
               <h4 class="card-title d-flex justify-content-between aling-items-center">{{nombre}} <a href="/productos/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
               </h4>
               <p>{{descripcion}}</p>
               <form action="/productos/delete/{{_id}}?_method=DELETE" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar</button>               
               </form>
            </div>
         </div>
      </div>
   {{/each}}
</div>